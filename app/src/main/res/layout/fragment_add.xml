<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="367dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".NewNoteFragment">

        <TextView
            android:id="@+id/addNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="47dp"
            android:fontFamily="sans-serif"
            android:text="Add New Habit "
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="362dp"
            android:layout_height="61dp"
            android:layout_below="@id/addNoteHeading"
            android:layout_marginTop="26dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:hint="@string/enter_the_habit_titile"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="366dp"
            android:layout_height="235dp"
            android:layout_below="@id/addNoteTitle"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:gravity="top"
            android:hint="@string/enter_the_habit_description"
            android:padding="12dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="308dp"
            android:layout_height="282dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/addtask" />


    </RelativeLayout>

</layout>
