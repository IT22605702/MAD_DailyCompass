<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="20dp"
        tools:context=".fragments.EditFragment">

        <TextView
            android:id="@+id/editNoteHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="54dp"
            android:fontFamily="sans-serif"
            android:layout_marginStart="20dp"
            android:text="@string/edit_habit_details"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editNoteTitle"
            android:layout_width="327dp"
            android:layout_height="65dp"
            android:layout_below="@id/editNoteHeading"
            android:layout_marginTop="25dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:hint="@string/enter_new_habit"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editNoteDesc"
            android:layout_width="330dp"
            android:layout_height="215dp"
            android:layout_below="@id/editNoteTitle"
            android:layout_marginTop="17dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif"
            android:gravity="top"
            android:hint="@string/enter_the_description"
            android:padding="12dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="330dp"
            android:layout_height="175dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="84dp"
            app:srcCompat="@drawable/editimage" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editNoteFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:backgroundTint="@color/primary"
        android:tintMode="@color/white"
        android:src="@drawable/done_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="editFab" />


</RelativeLayout>
    </layout>
